      }
    },
    {
      "Name": "GrafanaLoki",
      "Args": {
        "uri": "http://localhost:3100",
        "labels": [
          {
            "key": "app",
            "value": "twodaydemobank.service.core"
          }
        ],
        "propertiesAsLabels": [
          "app"
        ]
      }
    }
  ]
